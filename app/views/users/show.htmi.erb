<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">ニックネーム</th>
            <td class="table__col2"><%= "#{@name}" %></td>
          </tr>
          <tr>
            <th class="table__col1">好きなメンバー</th>
            <td class="table__col2"><%= "#{@user.favemember.name}" %></td>
          </tr>
          <tr>
            <th class="table__col1">好きなケミ、ユニット</th>
            <td class="table__col2"><%= "#{@user.chemistry}" %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= "#{@user.profile}" %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">

        <%= "#{@name}さんのトレカコレクション"%>
      </h2>
      <div class="card__wrapper">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <%= render partial: "collections/collection", collection: @collections %>
      </div>
    </div>
  </div>
</div>